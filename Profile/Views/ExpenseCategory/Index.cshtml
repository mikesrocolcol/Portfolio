
@model IEnumerable<ExpenseCategoryEntity>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 "   >

    <div class="row pt-4">
        <div class="col-6 text-center">
            <h2 class="text-primary">Expense Categories</h2>
        </div>
        <div class="col-6 text-center">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Category</a>

        </div>
    </div>
    <br />
 </div>
     
<div style="overflow-x:auto">
<table class="table-sm table table-bordered table-responsive table-striped table table-hover table-active w-50 "   > 
    
    <thead>
        <tr class="table-active ">
            <th >
                Expense Category
            </th>

            <th >
              
            </th>
            
            
            
            
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="60%">
                    @obj.ExpenseCategoryName
                </td>
                <td width="30%">
                   
                    <div class=" w-70 btn-group align-content-center" >
                    <a asp-action="ExpenseCategoryUpdate" asp-controller="ExpenseCategory" asp-route-id="@obj.ExpenseCategoryId"
                    class="btn btn-info mx-1"><i class="bi bi-pencil-square"></i>Edit</a>
                   
                    <a asp-action="ExpenseCategoryDelete" asp-controller="ExpenseCategory" asp-route-id="@obj.ExpenseCategoryId"
                    class="btn btn-danger mx-1" ><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>
                   

                </td>
            </tr>
        }
    </tbody>
</table>
 </div>
 </>