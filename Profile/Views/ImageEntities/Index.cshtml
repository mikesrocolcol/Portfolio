@model IEnumerable<Profile.Models.ImageEntity>

@{
    ViewData["Title"] = "Index";
   Layout = "~/Views/Shared/_mainGallery.cshtml";
}


<div class="row pt-4">

    <div class="text-end btntxt">
        <a asp-controller="ImageEntities" asp-action="Create" class="btn ">
            <i class="bi bi-plus-circle"></i> <span>Add New</span>
        </a>
    </div>
</div>


<div class="row pb-0  container " id="Gallery">
    @foreach (var item in Model)
    {
        <div class=" col-lg-3 col-md-6">
            <div class="row pb-0  itemsContainer">

                <div class=" card boxpad">
                    <img src="~/images/@item.ImageFile" width="auto" height="250px" />

                </div>
                <div class="play">
                    <div class="info" >
                   <a asp-action="Edit"  asp-route-id="@item.Id"><i class="bi bi-pencil-square " ></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash " ></i></a>
                    </div>
                </div> 
                

            </div>
        </div>
    }

</div>





