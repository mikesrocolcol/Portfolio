@model Profile.Models.ExpenseEntity

@{
    ViewData["Title"] = "Index";
     
}

<h1>Create</h1>


<hr />
<div class=".container-sm table-create "  >
    <div class="col-md-4 " >
        
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseCategoryId" class="control-label"></label>
                <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
                <select asp-for="ExpenseCategoryId" class="form-control " asp-items="@ViewBag.ExpenseCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Createdate" class="control-label"></label>
                <input asp-for="Createdate" class="form-control" />
                <span asp-validation-for="Createdate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="col-auto">

                <label asp-for="FormFile" class="control-label"></label>
                <span asp-validation-for="FormFile" class="text-danger"></span>
                <div class="custom-file">

                    <input  asp-for="FormFile" class="custom-file-input form-control" type="file" id="formFile"
                           onchange="document.getElementById('ProductPrev').src=window.URL.createObjectURL(this.files[0])">
                    


                </div>

                <img class="img-thumbnail"  id="ProductPrev" src="" alt="img" width="350" height="350"
                     style="border:1px;margin-top:20px;margin:auto " />


            </div>
            <button type="submit" class="btn btn-primary " style="width:150px ">Create</button>
            <a asp-controller="ExpenseEntities" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("Selected").html(fileName);

        });
    </script>
}

